<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="ControllerGUI" alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mt.nl.torchbot.controller.ControllerGUI">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="500.0" prefWidth="500.0">
         <children>
            <BorderPane fx:id="mainWindow" prefHeight="500.0" prefWidth="500.0">
               <top>
                  <MenuBar BorderPane.alignment="CENTER">
                    <menus>
                      <Menu mnemonicParsing="false" onAction="#handleButtonAction" text="File">
                           <items>
                              <MenuItem mnemonicParsing="false" text="Open" />
                              <MenuItem mnemonicParsing="false" text="Save" />
                           </items></Menu>
                      <Menu mnemonicParsing="false" onAction="#getPortSelection" text="Connect">
                           <items>
                              <MenuItem fx:id="startConnectionMenuItem" mnemonicParsing="false" onAction="#startConnection" text="Start Connection" visible="false" />
                              <Menu fx:id="openRecentTab" mnemonicParsing="false" onAction="#getPortSelection" text="Port" />
                           </items>
                      </Menu>
                    </menus>
                  </MenuBar>
               </top>
               <bottom>
                  <TextArea fx:id="textArea" prefHeight="358.0" prefWidth="500.0" BorderPane.alignment="CENTER" />
               </bottom>
               <left>
                  <Button mnemonicParsing="false" onAction="#handleButtonAction" text="Import" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="100.0" />
                     </BorderPane.margin>
                  </Button>
               </left>
               <right>
                  <Button mnemonicParsing="false" text="Export" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets right="100.0" />
                     </BorderPane.margin>
                  </Button>
               </right>
            </BorderPane>
         </children>
      </AnchorPane>
   </children>
</GridPane>
